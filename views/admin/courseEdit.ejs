<% include ../partials/header %>
<main id="body" class="container">
        <div>
                <h2>Edit <%= course.name %> </h2>
                <form action='/admin/courses/<%= course.id %>?_method=PUT' method='POST'>
                    <label for="name">Name</label>
                    <input type="text" name="name" value="<%= course.name %>">
                    <br />
        
                    <label for="code">Code</label>
                    <input type="text" name="code" required="true" value="<%= course.code %>">
                    <br />
        
                    <label for="image">Link to image</label>
                    <input type="text" name="image" value="<%= course.image %>">
                    <br />
        
                    <label for="description">Description</label>
                    <textarea name="description"><%= course.description %></textarea>
                    <br />

                    <label for="teacher">Teacher</label>
                    <select name='teacher'>
                        <% allTeachers.forEach(t => { %>
                            <option value='<%=t.id%>' <%= t.id == course.teacher.id ? 'selected' : '' %>><%= t.username %></option>
                        <% }) %>
                        
                    </select>
                    <br />
        
                    <input type="submit" value="Submit">
                </form>
                <form action='/courses/<%= course.id %>?_method=DELETE' method='POST'>
                    <input type='submit' value='DELETE' class='btn btn-danger' />
                </form>
            </div>
</main>
    <% include ../partials/footer %>