<% include ../partials/header %>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Image</th>
            <th>Email</th>
            <th>Type</th>
            <th>Username</th>
            <th>Courses</th>
            <th>EDIT</th>
            <th>DELETE</th>
        </tr>
    </thead>
    <tbody>
        <% allUsers.forEach(function(s) { %>
            <tr>
                <td><%= s.firstName %></td>
                <td><%= s.lastName %></td>
                <td><%= s.image %></td>
                <td><%= s.email %></td>
                <td><%= s.type %></td>
                <td><%= s.username %></td>
                <td><%= s.courses.length %></td>
                <td><form class="form-inline" method="GET" action="/admin/users/<%= s.id %>/edit"><input type="submit" value="EDIT" class="btn btn-sm btn-success"></form></td>
                <td><form class="form-inline" method="POST" action="/admin/users/<%= s.id %>?_method=DELETE"><input type="submit" value="DELETE" class="btn btn-sm btn-danger"></form></td>
            </tr>
        <% }) %>
    </tbody>
</table>

<% include ../partials/footer %>