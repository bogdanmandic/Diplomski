<% include ../partials/header %>
<main id="body" class="container">

        <section class="courses">

            <div class="container text-center">

                <div class="course course-type-html">

                    <div class="course-card">
                        
                        <header class="course-header container-fluid">
                            <div class="time-container">
                                <img class="time mr-1" src="img/clock.svg" alt="">
                                <span class="align-middle">4 weeks</span>
                            </div>
                            
                            <h2 class="text-center m-0 py-1 d-none d-sm-none d-md-block"> Edit
                                <%= course.name %>
                            </h2>
                            <img class="book" src="img/book.svg" alt="">
                        </header>

                        <form action='/courses/<%= course.id %>?_method=PUT' method='POST'>
                        <div class="row editCourseMargin justify-content-around container-fluid">
                            
                            <div class="editCourseForm ">
                                <div>
                                    <label for="description">Description</label>
                                </div>
                                <div>
                                    <textarea name="description"><%= course.description %></textarea>
                                    <br />

                                </div>

                            </div>
                            <div class="editCourseForm text-center">

                                <table>

                                    <tr>
                                        <td>
                                            <label for="name">Name</label>
                                        </td>
                                        <td>
                                            <input type="text" name="name" value="<%= course.name %>">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label for="code">Code</label>
                                        </td>
                                        <td>
                                            <input disabled type="text" name="code" required="true" value="<%= course.code %>">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label for="image">Link to image</label>
                                        </td>
                                        <td>
                                            <input type="text" name="image" value="<%= course.image %>">
                                        </td>
                                    </tr>
                                </table>
                                <div class="row container-fluid justify-content-center">
                                        
                                            <input type="submit" value="Submit" class="btn btn-info editCourseBtn">
                                        
                                    </form>
                                    <form action='/courses/<%= course.id %>?_method=DELETE' method='POST'>
                                        
                                            <input type='submit' value='Delete' class='btn btn-danger editCourseBtn' />
                                      
                                    </form>
                                    </div>





                            </div>

                        </div>
                   


                    </div>
                </div>


            </div>
        </section>
    </main>
<% include ../partials/footer %>