<% include ../partials/header %>

    <section id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <% if(carousel && carousel.length > 0 ) {
                for(var i =0; i<carousel.length; i++) { %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%=  i==0 ? 'active' : '' %>"></li>
            <%  }} %>
        </ol>
        <div class="carousel-inner">
            <% if(carousel && carousel.length > 0 ) {
                for(var i =0; i<carousel.length; i++) { %>
            <div class="carousel-item <%=  i==0 ? 'active' : '' %>">
                <a href='<%= carousel[i].link %>' target=_blank>
                    <img src="data:<%= carousel[i].contentType %>;base64,<%= carousel[i].picture %>" alt="<%= carousel[i].originalname %>">
                </a>
            </div>
            <% }} %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </section>

    <main id="body" class="container">
    
    <section class="courses">
        <div class="container text-center">
            <h1 class="text-center pb-3">Courses</h1>
            <% courses.forEach(c => { %>
                <div class="course course-type">
                    <div class="course-card">
                        <header class="course-header container-fluid">
                            <div class="time-container">
                               <img class="time mr-1" src="/templates/img/clock.svg" alt=""> 
                               <span class="align-middle">4 weeks</span>
                            </div>
                            <h2 class="text-center m-0 py-1 d-none d-sm-none d-md-block"><%= c.name %></h2>    
                            <img class="book" src="/templates/img/book.svg" alt="">
                        </header>

                        <h2 class="text-center m-0 py-1 d-md-none"><%= c.name %></h2>  
                        <div class="row course-card-body">
                            <div class="col-lg-6 course-logo">
                                <img src="<%= c.image %>" class="py-3" />
                            </div>
                            <div class="col-lg-6 course-description">
                                <p class="text-justify"><%= c.description.length<=400 ? c.description : c.description.substr(0,400)+'...' %></p>
                            </div>
                        </div>
                        <footer class="course-footer">
                            <a href="/courses/<%= c.id %>" class="btn-details">Details</a>
                            <div class="tags">
                                <span class="tag">#Beginner</span>
                                <span class="tag">#Front-end</span>
                            </div>    
                        </footer>
                    </div>
                </div>

            <% }) %>





        </div>
    </section>
</main>

    <% include ../partials/footer %>