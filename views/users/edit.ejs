<% include ../partials/header %>
    <main id="body" class="container">
        <section class="courses">
            <div class="container text-center">
                <div class="course course-type-html">
                    <div class="course-card">
                        <header class="course-header container-fluid adminCourseTeacher">
                            <h2 class="text-center m-0 py-1 editCourseHeader">Edit
                                <%= user.username %>
                            </h2>
                        </header>




                        <form action='/users/<%= user.id %>?_method=PUT' method='POST'>
                            <div class="editCourseFields">
                                <div class="form-group row">
                                    <label for="username" class="col-md-2 col-form-label">Userame</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="name" name="username" value='<%= user.username %>'>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="firstName" class="col-md-2 col-form-label">First Name</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="code" name="firstName" value="<%= user.firstName %>">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lastName" class="col-md-2 col-form-label">Last Name</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="code" name="lastName" value="<%= user.lastName %>">
                                    </div>
                                </div>
                                <div>
                                    <div class="form-group row">
                                        <label class="col-md-2 col-form-label" for="image">Image</label>
                                        <div class="col-md-10">
                                            <input class="form-control" type="text" name="image" value="<%= user.image %>">
                                        </div>
                                    </div>
                                    <div class="container-fluid userEditPicDiv">
                                        <img class="userEditPic img-thumbnail" src='<%= user.image %>' />
                                    </div>
                                </div>

                            </div>
                    </div> <!-- / course-card -->
                    <div class="submitButtonsContainer">
                        <input class="btn-dark userEditSubmit editSubmitBtn" type="submit" value="Submit">
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <% include ../partials/footer %>