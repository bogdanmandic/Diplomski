<% include ../partials/header %>

<main id="body">
    <div class="profileBody container">
        <div class="row">
            <div class="col-lg-5 col-md-12 col-sm-12">
                <div class="column container text-center teacherViewImg">
                    <img class="profileImage userEditPic" src="<%= user.image %>" alt="UserPicture">
                    <div class="text-profile">
                        <% if(user.firstName || user.lastName) { %>
                        <div class="row profile-info-centar">
                            First name:
                            <span><%= user.firstName %></span>

                        </div>
                        <div class="row profile-info-centar">
                            Last name:
                            <span><%= user.lastName %></span>
                        </div>
                        <div class="row profile-info-centar">
                            Username:
                            <span><%= user.username %></span>
                        </div>
                        <% } else { %>

                        <div class="row profile-info-centar">
                            Please edit your profile to show more info about you.
                        </div>
                        <% } %>
                        <% if(currentUser && currentUser.id == user.id) { %>
                        <a href='/users/<%= user.id %>/edit' class='btn btn-primary'>Edit Profile</a>
                        <% } %>
                    </div>

                    <section>
                        <img class="calendar" src="http://www.calendarzoom.com/media/printable-calendar/january-2018-print-free-calendar-full-weekday.png"
                            alt="UserPicture">
                    </section>

                </div>

            </div>


            <div class="col-lg-7 col-md-12 col-sm-12 ">
                <h1 class="text-center profile-header">Your Courses</h1>
                <div>
                    <% user.courses.forEach(e => { %>

                    
                    <div>
                        <div class="course course-type-css cardMarginTop">
                            <div class="course-card">
                                <header class="course-header container-fluid courseTitle">

                                        <h2 title='<%= e.name %>' class="text-center m-0 py-1 d-none d-sm-none d-md-block"><%= e.name.length<=25 ? e.name : e.name.substring(0,25)+'...' %></h2>   

                                </header>

                                <h2 class="text-center m-0 py-1 d-md-none"><%= e.name %></h2> 

                                <div class="column courseContent ">
                                    <div class="row margin-remove">
                                        <p>Started at:
                                            <span>17.11.1847.</span>
                                        </p>

                                    </div>
                                    <div class="progress progressWidth">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
                                    </div>
                                </div>
                                <% if(currentUser && currentUser.id == user.id) { %>
                                <footer class="course-footer html-color">
                                    <a href="/courses/<%= e.id %>" class="btn profileCourseBtn">Continue</a>
                                </footer>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                    
                </div>
            </div>


        </div>
    </div>

</main>

<% include ../partials/footer %>